<%-include('./admindashboard/header.ejs')%>
    <div class="container-xxl">
        <div class="row">
            <div class="col-2"><%-include('./admindashboard/left.ejs')%></div>
            <div class="col-10">
                <div class="container">
                    <div class="row d-flex justify-content-center py-5">
                
                        <div class="col-12 col-md-6">
                            <form method="post" action="/upload-products" enctype="multipart/form-data">
                                <h2 class="mb-3">Upload Products</h2>
                                
                                <div class="mb-3">
                                    <label for="exampleInputName" class="form-label">Product Image</label>
                                    <input type="file" name="prodImage" class="form-control" id="exampleInputName" aria-describedby="emailHelp"
                                        required multiple>
                                </div>
                                <div class="mb-3">
                                    <label for="exampleInputName" class="form-label">Product Name</label>
                                    <input type="text" name="prodName" class="form-control" id="exampleInputName" aria-describedby="emailHelp"
                                        required>
                                </div>
                                <div class="mb-3">
                                    <label for="exampleInputName" class="form-label">Product Category</label>
                                    <input type="text" name="prodCategory" class="form-control" id="exampleInputName" aria-describedby="emailHelp"
                                        required>
                                </div>
                                <div class="mb-3">
                                    <label for="exampleInputMessage" class="form-label">Product MRP</label>
                                    <input type="text" name="prodOrgPrice" class="form-control" id="exampleInputName" aria-describedby="emailHelp"
                                        required>
                                </div>
                                <div class="mb-3">
                                    <label for="exampleInputName" class="form-label">Product Deal Price</label>
                                    <input type="text" name="prodDealPrice" class="form-control" id="exampleInputName" aria-describedby="emailHelp"
                                        required>
                                </div>
                                <button type="submit" disabled class="btn btn-primary me-2" style="border-radius: 3px;">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
